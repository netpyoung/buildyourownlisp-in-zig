// file: .vscode/launch.json
{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "targetProject",
            "type": "pickString",
            "description": "DEBUG: Choose project to debug...",
            "options": [
                "ch02",
                "ch03",
                "ch04",
                "ch05",
                "ch06",
                "ch07",
                "ch08",
                "ch09",
                "ch10",
                "ch11",
                "ch12",
                "ch13",
                "ch14",
                "ch15",
                "hand_rolled_parser",
            ],
            "default": "ch02"
        }
    ],
    "configurations": [
        {
            "name": "Launch",
            "type": "cppvsdbg", // for Windows
            // "type": "lldb", // for Linux | macOs
            "request": "launch",
            "program": "${workspaceFolder}/lispy-zig/${input:targetProject}/zig-out/bin/${input:targetProject}.exe", // for Windows
            // "program": "${workspaceFolder}/lispy-zig/${input:targetProject}/zig-out/bin/${input:targetProject}.", // for Linux | macOs
            "args": [
                // "hello_world.lspy",
                // "prelude.lspy",
            ],
            "cwd": "${workspaceFolder}/lispy-zig/${input:targetProject}",
            // "stopAtEntry": false,
            // "environment": [],
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "build",
            "console": "integratedTerminal",
            // "console": "externalTerminal",
        }
    ],
}